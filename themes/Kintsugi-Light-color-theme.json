  "tokenColors": [
    {
      "name": "Default Text, Variables, Properties, Functions",
      "scope": [
        "text",
        "source",
        "variable",
        "meta.macro",
        "keyword.symbol",
        "keyword.operator",
        "meta.property-name",
        "constant.character",
        "entity.name.variable",
        "entity.name.function"
      ],
      "settings": {
        "foreground": "#4A463D"
      }
    },
    {
      "name": "Comment",
      "scope": ["comment", "string.comment"],
      "settings": {
        "foreground": "#938E83"
      }
    },
    {
      "name": "String",
      "scope": ["string", "string.template", "punctuation.definition.string"],
      "settings": {
        "foreground": "#3A7E3D"
      }
    },
    {
      "name": "Number",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#365AA8"
      }
    },
    {
      "name": "Keywords, Storage, Special Language Variables",
      "scope": [
        "keyword",
        "storage.modifier",
        "storage.type",
        "keyword.operator.new",
        "keyword.operator.expression.typeof.js",
        "entity.name.function.macro",
        "keyword.type.go",
        "keyword.operator.sizeof.c",
        "variable.language.self.rust",
        "variable.language.this"
      ],
      "settings": {
        "foreground": "#AF8333",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Types, Support, Other Entities",
      "scope": [
        "support",
        "entity.name",
        "constant.language",
        "constant.other.placeholder",
        "punctuation.definition.interpolation"
      ],
      "settings": {
        "foreground": "#6B665B"
      }
    },
    {
      "name": "Java Annotation",
      "scope": ["storage.type.annotation.java"],
      "settings": {
        "foreground": "#678E87",
        "fontStyle": ""
      }
    },
    {
      "name": "Preprocessor",
      "scope": [
        "entity.name.function.preprocessor",
        "entity.name.other.preprocessor.macro.predefined"
      ],
      "settings": {
        "fontStyle": "bold"
      }
    },
    {
      "name": "Invalid",
      "scope": "invalid",
      "settings": {
        "foreground": "#C94E4E",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Link",
      "scope": "string.detected-link",
      "settings": {
        "fontStyle": "underline"
      }
    },
    {
      "name": "Diff: Header",
      "scope": ["meta.diff", "meta.diff.header"],
      "settings": {
        "foreground": "#938E83"
      }
    },
    {
      "name": "Diff: Deleted",
      "scope": "markup.deleted",
      "settings": {
        "foreground": "#C94E4E"
      }
    },
    {
      "name": "Diff: Inserted",
      "scope": "markup.inserted",
      "settings": {
        "foreground": "#3A7E3D"
      }
    },
    {
      "name": "Diff: Changed",
      "scope": "markup.changed",
      "settings": {
        "foreground": "#D9A03B"
      }
    },
    {
      "name": "Find in Files: Filename",
      "scope": "entity.name.filename.find-in-files",
      "settings": {
        "foreground": "#AF8333"
      }
    },
    {
      "name": "Markup: Bold & Heading",
      "scope": ["markup.bold", "markup.heading.markdown"],
      "settings": {
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markup: Italic",
      "scope": "markup.italic",
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "name": "Markup: Raw",
      "scope": ["markup.block.raw", "markup.inline.raw"],
      "settings": {
        "foreground": "#6B665B" // Harmonized with types/support
      }
    }
  ],
  "semanticHighlighting": false
}
